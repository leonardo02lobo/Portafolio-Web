---
import Layout from "../layouts/Layout.astro";
import Certificado from "../components/Certificado.astro";
import certificaciones from "../data/certificaciones.json";
---

<Layout>
    <div class="flex flex-col justify-center items-start p-4 md:p-8 lg:p-12 gap-4 md:gap-6 max-w-7xl mx-auto">
        <p class="text-xl md:text-3xl lg:text-4xl font-bold leading-tight md:leading-normal">
            Soy Desarrollador y Estudiante de Ingeniería en Informática en la Universidad Nacional Experimental del Táchira
        </p>
        <p class="text-base md:text-lg lg:text-2xl text-gray-300 leading-relaxed">
            Me apasiona el mundo de la Ciberseguridad y el ecosistema de Java, al igual que el desarrollo Backend junto a desafíos de lógica
        </p>
        
        <section class="w-full mt-8 md:mt-12">
            <h2 class="text-2xl md:text-4xl lg:text-5xl font-bold mb-6 md:mb-8">Certificaciones</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-6">
                {certificaciones.map((cert: any) => (
                    <Certificado imagen={cert.imagen} plataforma={cert.plataforma} />
                ))}
            </div>
        </section>
    </div>
</Layout>