---
interface Props{
    title: string;
    description: string;
    imageUrl: string;
    url: string
}
const { title, description, imageUrl,url }: Props = Astro.props;
---

<div class="flex flex-col items-start justify-items-center p-3 md:p-4 border-2 border-blue-700 rounded-lg shadow-md gap-3 md:gap-4 bg-gray-900 hover:bg-blue-900 hover:scale-105 transition-all duration-300 hover:shadow-xl">
    <img src={imageUrl} alt={title}  class="w-full h-40 md:h-48 lg:h-56"/>
    <h3 class="text-lg md:text-xl lg:text-2xl">{title}</h3>
    <p class="text-sm md:text-base">{description}</p>
    {
        description.split("@").length > 1
            ? <a href='https://github.com/21harley' class='underline' target='_blank'>@21harley</a>
            : ""
    }
    {
        url === "none"
            ? <p class="text-red-500">Este Proyecto posee un repositorio privado</p><p>Link: <a href="https://helloworldcup.netlify.app/" class="underline" target="_blank">Hello World Cup</a></p>
            : <a href={url} target="_blank" class="rounded-2xl bg-blue-700 hover:bg-blue-900 cursor-pointer p-4">Ver Proyecto</a>
    }
</div>